{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceRoot": "./src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    ".*",
    "_*",
    "dist",
    "node_modules"
  ]
}
